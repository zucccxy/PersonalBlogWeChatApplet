<!--pages/account/account.wxml-->
<view class="userInfo">
  <view class="userInfo-avatar" style="flex:1">
    <image class="avatarUrl " src="../../image/kobe.png"></image>
  </view>
  <view class="userInfo-message " style="flex:1">
    <view class="userInfo-message-name">
      <text>Kim</text>
    </view>
    <view class="userInfo-message-signtime">
      <text>已签到1天</text>
    </view>
  </view>
</view>
<view class="bigline"></view>
<view class="my">
  <view bindtap="enterMyNews" class="list-li">
    <view class='list-tx'>
      <view class='list-tx-img'>
        <image src="../../image/my.png"></image>
      </view>
      <text>我的消息</text>
    </view>
  </view>
