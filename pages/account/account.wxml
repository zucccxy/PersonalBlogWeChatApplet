    <view>
      <text>我的收藏</text>
    </view>
    <view></view>

  </view> -->
</view>
<view class="bigline"></view>
<view class="sign">
  <!-- <view class="sign-icon">
    <text>图标</text>
  </view> -->
  <view class="list-li">
    <view class='list-tx'>
      <view class='list-tx-img'>
        <image src="../../image/sign.png"></image>
      </view>
      <text>签到</text>
    </view>
  </view>
  <view class="line"></view>
  <view class="sign-image">
    <button class='success btn ml-sm iconfont icon-locationfill'>
    </button>
  </view>
  <view class="sign-time">
    <text class="sign-time-center">点击按钮进行签到</text>
  </view>
</view>
<view class="bigline"></view>
<view class="other">
  <!-- <view class="other-icon">
    <text>图标</text>
  </view> -->
  <view class="list-li">
    <view class='list-tx'>
      <view class='list-tx-img'>
        <image src="../../image/other.png"></image>
      </view>
      <text>其他</text>
    </view>
  </view>
  <view class="line"></view>
  <view class="other-share">
    <button plain="true" style="border: 0;margin: 0;padding: 0;font-size: 18px;color:#000000;line-height: 1;width: 100%;text-align: left;" open-type="share">分享给好友
    </button>
  </view>
  <view class="line"></view>
  <view bindtap="enterFeedback" class="other-feedback">
    <text>反馈意见</text>
  </view>
  <view class="line"></view>
  <view bindtap="showAbout" class="other-about">
    <text>关于本程序</text>
  </view>
</view>