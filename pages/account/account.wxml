    <view class="my-new-icon" style="width:50rpx">
      <image class="my-new-icon-picture" src="../../image/my.png"></image>
    </view>
    <view class="my-new-text">
      <text>我的消息</text>
    </view>
  </view> -->

  <view class="line"></view>
  <view bindtap="enterMyCollection" class="list-li">
    <view class='list-tx'>
      <view class='list-tx-img'>
        <image src="../../image/notice.png"></image>
      </view>
      <text>我的收藏</text>
    </view>
  </view>
